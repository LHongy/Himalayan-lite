.staff {
	width: 100%;
	height: 500rpx;
	border-top-left-radius: 20rpx;
	border-top-right-radius: 20rpx;
	position: relative;
	top: -10rpx;
}

.staff-index {
	width: 15%;
	height: 80rpx;
	text-align: center;
	line-height: 80rpx;
	color: #aaa;
}

.staff-content {
	width: 100%;
	height: 150rpx;
	display: flex;
	box-sizing: border-box;
	justify-content: flex-start;
	align-items: center;
	padding: 20rpx 20rpx;
}